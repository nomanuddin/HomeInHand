<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.homeinhand.MainActivity">

    <include layout="@layout/toolbar_layout"/>

    <Button
        android:id="@+id/but_ConfigRemoteUnit"
        android:layout_width="175dp"
        android:layout_height="37dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="16dp"
        android:onClick="ConfigureRemoteUnit_Cbk"
        android:text="@string/but_ConfigRemoteUnit_Txt"
        android:textColor="#053255"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/but_DisplayAvailableUnits"
        android:layout_width="178dp"
        android:layout_height="37dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="16dp"
        android:onClick="DisplayAvailableUnits_Cbk"
        android:text="@string/but_DisplayAvailableUnits_Txt"
        android:textColor="#053255"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tV_AvailableUnits"
        android:layout_width="329dp"
        android:layout_height="38dp"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:layout_marginBottom="69dp"
        android:textColor="#053255"
        android:textColorLink="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bedRoom1"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/mybutton"
        android:onClick="onClickButton"
        android:text="@string/bedroom_1"
        android:textAllCaps="false"
        android:textColor="#053255"
        android:textColorHighlight="#673AB7"
        android:textColorLink="#2196F3"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bedRoom2"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/bedRoom1"
        android:background="@drawable/mybutton"
        android:onClick="onClickButton"
        android:text="@string/bedroom_2"
        android:textAllCaps="false"
        android:textColor="#053255"
        android:textColorHighlight="#673AB7"
        android:textColorLink="#2196F3"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/bedRoom1"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bedRoom3"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_below="@id/bedRoom1"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/mybutton"
        android:onClick="onClickButton"
        android:text="@string/bedroom_3"
        android:textAllCaps="false"
        android:textColor="#053255"
        android:textColorHighlight="#673AB7"
        android:textColorLink="#2196F3"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/diningHall"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_below="@id/bedRoom1"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/bedRoom3"
        android:background="@drawable/mybutton"
        android:onClick="onClickButton"
        android:text="@string/dining_hall"
        android:textAllCaps="false"
        android:textColor="#053255"
        android:textColorHighlight="#673AB7"
        android:textColorLink="#2196F3"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tvLounge"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_below="@id/bedRoom3"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/mybutton"
        android:onClick="onClickButton"
        android:text="@string/tv_lounge"
        android:textAllCaps="false"
        android:textColor="#053255"
        android:textColorHighlight="#673AB7"
        android:textColorLink="#2196F3"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kitchen"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_below="@id/diningHall"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/tvLounge"
        android:background="@drawable/mybutton"
        android:onClick="onClickButton"
        android:text="@string/kitchen"
        android:textAllCaps="false"
        android:textColor="#053255"
        android:textColorHighlight="#673AB7"
        android:textColorLink="#2196F3"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/carPorch"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_below="@id/tvLounge"
        android:layout_margin="10dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="180dp"
        android:layout_marginRight="180dp"
        android:background="@drawable/mybutton"
        android:onClick="onClickButton"
        android:text="@string/car_porch"
        android:textAllCaps="false"
        android:textColor="#053255"
        android:textColorHighlight="#673AB7"
        android:textColorLink="#2196F3"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/terrace"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_below="@id/kitchen"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/carPorch"
        android:background="@drawable/mybutton"
        android:onClick="onClickButton"
        android:text="@string/terrace"
        android:textAllCaps="false"
        android:textColor="#053255"
        android:textColorHighlight="#673AB7"
        android:textColorLink="#2196F3"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</RelativeLayout>
